<% include ./partials/header %>

<div class="ui main text container segment">
    <h2 class="ui huge header"><%= blog.title %></h2>
    <span class="content"><%= blog.created.toLocaleString('se-SE') %></span>

    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %>">
        </div>
        <div class="description">
            <p><%- blog.body %></p>
        </div>
        <a class="ui inverted violet button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form  id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui inverted red button">Delete</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>