<% include ./partials/header %>

<h1>Index page</h1>

<% blogs.forEach((blog) => { %>
    <div>
        <h2><%= blog.title %></h2>
        <span><%= blog.created %></span>
        <img src="<%= blog.image %>" alt="<%= blog.title %>">
        <p><%= blog.body %></p>
        <a class="ui inverted violet button" href="/blogs/<%= blog._id %>">Show more</a>
    </div>
<% }); %>

<% include ./partials/footer %>